<view class="body">
    <Tab bindgettab="getTab" tabList="{{ tabList }}" />
    <view class="lose-list" wx:if="{{list.length > 0}}">
        <ViewCard wx:for="{{ list }}" wx:key="index" data="{{ item }}" bindtap="toDetail" data-info="{{ item }}" handle="{{ true }}" bindgetdelete="getDelete" bindgetupdate="getUpdate"  />
    </view>
    
    <view wx:else style="margin: 30px; color: #aaa; text-align: center;">
      -- 暂无数据 --
    </view>

</view>